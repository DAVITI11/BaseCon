<?xml version="1.0" encoding="utf-8"?>

<!--      Add Fragment Layout     -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

  <EditText android:id="@+id/TableNameInput" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Enter Table Name" android:textSize="20dp"></EditText>

  <Button android:id="@+id/AddTableName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Add Table Name"></Button>

  <EditText android:id="@+id/ColumnName" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Enter Column Name"></EditText>

  <Spinner android:id="@+id/spinner" android:layout_width="match_parent" android:layout_height="50dp"></Spinner>

  <Button android:id="@+id/AddColumn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Add Column"></Button>

  <Button android:id="@+id/GoToMainButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Go to Main Page"></Button>

  <Button android:id="@+id/CrtTbl" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Create Table"></Button>

  <Button android:id="@+id/RefButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Refresh"></Button>

  <TextView android:id="@+id/TableName" android:layout_width="match_parent" android:layout_height="50dp" android:textAlignment="center" android:textSize="20dp"></TextView>

  <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal">
    <TextView android:id="@+id/ColmnNm" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:textAlignment="center"></TextView>
    <TextView android:id="@+id/ColmnTp" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:textAlignment="center"></TextView>
  </LinearLayout>

  <ListView android:id="@+id/ListV" android:layout_width="match_parent" android:layout_height="wrap_content"></ListView>

</LinearLayout>
